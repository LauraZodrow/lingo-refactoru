extends layout

block content
	button: a(href="/translate") Translate 
	button: a(href="/quiz") Quiz
	button Progress

	h1 Translation Form
	form#translateForm(method="post" action="/translateSubmit")
		input(type="text" name="word" placeholder="Word")
		input(type="text" name="languageFrom" placeholder="Language from")
		input(type="text" name="languageTo" placeholder="Language to")
		input(type="submit")

	p= translation.translation